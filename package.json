{
  "name": "eslint-config-commercetools",
  "version": "4.0.0",
  "description": "Commercetools's eslint config, following our styleguide",
  "main": "index.js",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/commercetools/eslint-config.git"
  },
  "author": "Nicola Molinari <nicola.molinari@commercetools.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/commercetools/eslint-config/issues"
  },
  "homepage": "https://github.com/commercetools/eslint-config",
  "peerDependencies": {
    "eslint": ">=3",
    "babel-eslint": ">=6",
    "eslint-config-airbnb": ">=11",
    "eslint-plugin-import": ">=1",
    "eslint-plugin-jsx-a11y": ">=2",
    "eslint-plugin-react": ">=6"
  },
  "files": [
    "index.js",
    "with-react.js"
  ],
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "commercetools",
    "javascript",
    "styleguide"
  ],
  "scripts": {
    "lint": "./scripts/lint .",
    "test": "npm run lint",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "./scripts/lint-staged-files"
    }
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "^11.2.0",
    "eslint-formatter-pretty": "^1.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "ghooks": "^1.3.2",
    "validate-commit-msg": "^2.8.0"
  }
}
